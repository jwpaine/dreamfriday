        }
    },
    "components": {
        "CreateForm": {
            "type": "form",
            "attributes": {
                "hx-post": "/create",
                "hx-swap": "innerHTML",
                "hx-target": "#messages"
            },
            "elements": [
                {
                    "type": "label",
                    "attributes": {
                        "for": "domain"
                    },
                    "text": "Domain",
                    "style": {
                        "color": "white",
                        "display": "block",
                        "font-size": "1rem",
                        "margin-bottom": "0.5rem"
                    }
                },
                {
                    "type": "input",
                    "attributes": {
                        "id": "domain",
                        "name": "domain",
                        "placeholder": "mysite.dreamfriday.com",
                        "required": "",
                        "type": "text"
                    },
                    "style": {
                        "border": "none",
                        "border-radius": "5px",
                        "font-size": "1rem",
                        "margin-bottom": "1rem",
                        "padding": "0.8rem",
                        "width": "100%"
                    }
                },
                {
                    "type": "label",
                    "attributes": {
                        "for": "template"
                    },
                    "text": "template",
                    "style": {
                        "color": "white",
                        "display": "block",
                        "font-size": "1rem",
                        "margin-bottom": "0.5rem"
                    }
                },
                {
                    "type": "input",
                    "attributes": {
                        "id": "template",
                        "name": "template",
                        "placeholder": "https://dreamfriday.com/json",
                        "required": "",
                        "type": "text"
                    },
                    "style": {
                        "border": "none",
                        "border-radius": "5px",
                        "font-size": "1rem",
                        "margin-bottom": "1rem",
                        "padding": "0.8rem",
                        "width": "100%"
                    }
                },
                {
                    "type": "button",
                    "attributes": {
                        "type": "submit"
                    },
                    "text": "Create Site",
                    "style": {
                        "background": "#22255d",
                        "border": "none",
                        "border-radius": "5px",
                        "color": "white",
                        "cursor": "pointer",
                        "font-size": "1.2rem",
                        "padding": "0.8rem",
                        "transition": "0.3s",
                        "width": "100%"
                    }
                },
                {
                    "type": "span",
                    "attributes": {
                        "id": "messages"
                    },
                    "style": {
                        "color": "white",
                        "display": "block",
                        "font-size": "1rem",
                        "margin-top": "1rem"
                    }
                }
            ],
            "style": {
                "background": "rgba(255, 255, 255, 0.1)",
                "border-radius": "10px",
                "box-shadow": "0 4px 10px rgba(0, 0, 0, 0.2)",
                "max-width": "400px",
                "padding": "2rem",
                "text-align": "center",
                "width": "100%"
            }
        },
        "Header": {
            "type": "header",
            "attributes": {
                "id": "header"
            },
            "elements": [
                {
                    "type": "a",
                    "attributes": {
                        "href": "/"
                    },
                    "text": "Dream Friday",
                    "style": {
                        "color": "white",
                        "font-size": "1.2rem",
                        "text-decoration": "none"
                    }
                }
            ],
            "style": {
                "background": "rgba(0, 0, 0, 0.8)",
                "display": "flex",
                "justify-content": "space-between",
                "padding": "1rem",
                "position": "fixed",
                "width": "100%"
            }
        }
    }
